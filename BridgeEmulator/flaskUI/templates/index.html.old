{% extends "layouts/base.html" %}

{% block title %}Dashboard{% endblock title %}

{% block content %}
<div class="grid">
  <div class="card">
    <h3>Entertainment Wizard</h3>
    <p>Create and position entertainment areas with a guided flow.</p>
    <a class="btn" href="/entertainment-wizard">Open Wizard</a>
  </div>
  <div class="card">
    <h3>WLED</h3>
    <p>Configure gradient handling for WLED entertainment mapping.</p>
    <a class="btn" href="/wled-settings">Open WLED Settings</a>
  </div>
  <div class="card">
    <h3>Yeelight</h3>
    <p>Music mode and tuning parameters for Yeelight integration.</p>
    <a class="btn" href="/yeelight-settings">Open Yeelight Settings</a>
  </div>
  <div class="card">
    <h3>Devices</h3>
    <p>Pair and configure supported devices and rules.</p>
    <a class="btn secondary" href="/devices">Open Devices</a>
  </div>
</div>

{% if groups is defined and lights is defined %}
  <div style="margin-top:16px;" class="card">
    <h3>Bridge Summary</h3>
    <div>Lights: {{ lights|length }}</div>
    <div>Groups: {{ groups|length }}</div>
  </div>
{% endif %}
{% endblock content %}

